<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context=".editNotice"
    tools:layout_editor_absoluteY="73dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="20dp"
        android:text="Edit Post"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/editNoticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="20dp"
        android:hint="Notice Title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editNoticeDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:hint="Notice Description"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNoticeTitle" />


    <Button
        android:id="@+id/editNoticeSubmitButton"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_light"
        android:textColor="@drawable/sem_but_text"
        android:text="Submit"  />

</LinearLayout>