<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="fill_parent"
    android:background="@drawable/white"
    android:layout_height="fill_parent"
    tools:context=".showSingleStudent">

    <TextView
        android:id="@+id/studentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="485dp"
        android:textStyle="bold"
        android:text="Name :"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/studentName_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="1dp"
        android:text="abc"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/studentBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="445dp"
        android:textStyle="bold"
        android:text="Batch :"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/studentBatch_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentBatch"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="1dp"
        android:text="abc"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/studentRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="405dp"
        android:textStyle="bold"
        android:text="Roll :"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/studentRoll_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentRoll"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="1dp"
        android:text="abc"
        android:textSize="19dp" />


    <TextView
        android:id="@+id/studentPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="365dp"
        android:textStyle="bold"
        android:text="Phone Number :"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/studentPhone_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentPhone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="1dp"
        android:text="def"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/studentEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="325dp"
        android:text="Email :"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/studentEmail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentEmail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="-1dp"
        android:text="none"
        android:textSize="14dp" />



    <TextView
        android:id="@+id/studentRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="285dp"
        android:text="Registration No:"
        android:textStyle="bold"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/studentRegistration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/studentRegistration"
        android:layout_alignParentStart="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="-1dp"
        android:text="none"
        android:textSize="14dp" />





</RelativeLayout>