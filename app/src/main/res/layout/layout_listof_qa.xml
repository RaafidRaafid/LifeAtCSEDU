<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:background="@drawable/layoutback"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="0dp"
    android:padding="15dp"
    android:id="@+id/qa_element_layout"
    >


    <TextView
        android:id="@+id/qa_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="abc"
        android:textStyle="bold"
        android:textColor="@drawable/front_but_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/qa_asker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qa_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:text="no no asker"
        android:textColor="@drawable/front_but_text"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/qa_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qa_asker"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:text="no time"
        android:textColor="@drawable/front_but_text"
        android:textSize="10sp" />


</RelativeLayout>