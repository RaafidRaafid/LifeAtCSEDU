<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newback"
    tools:context=".showSingleCourse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/description_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nana"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/description_back"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: "
            android:textColor="#fff"
            android:textSize="19dp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mama"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="0"
        android:layout_gravity="center">

        <Button
            android:id="@+id/toBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Books"
            android:background="@drawable/layoutback"
            android:textColor="@drawable/front_but_text"/>

        <Button
            android:id="@+id/toResource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource"
            android:background="@drawable/layoutback"
            android:textColor="@drawable/front_but_text"/>

        <Button
            android:id="@+id/toPastQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Questions"
            android:background="@drawable/layoutback"
            android:textColor="@drawable/front_but_text"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:layout_weight="3">

        <Button
            android:id="@+id/course_to_qa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Questions"
            android:background="@drawable/layoutback"
            android:textColor="@drawable/front_but_text"/>
    </LinearLayout>


</LinearLayout>